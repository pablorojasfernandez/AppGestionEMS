@model IEnumerable<AppGestionEMS.Models.AsignacionDocente>

@{
    ViewBag.Title = "Asignación Docente";
}

<h2>Asignación Docente</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Curso
        </th>
        <th>
           Grupo
        </th>
        <th>
            Usuario
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Curso.Anyo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Grupo.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.Name)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalle", "Details", new { id=item.Id }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
