@model IEnumerable<AppGestionEMS.Models.Evaluaciones>

@{
    ViewBag.Title = "Evaluacion";
}

<h2>Evaluacion</h2>

<table class="table">
    <tr>
        <th>
            Curso
        </th>
        <th>
            Grupo
        </th>
        <th>
            Usuario
        </th>
        <th>
            Convocatoria
        </th>
        <th>
            Nota Media Teoria
        </th>
        <th>
            Nota Media Practica
        </th>
        <th>
            Nota Final
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Curso.Anyo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grupo.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Convocatoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NotaMediaTeoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NotaMediaPractica)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NotaMediaFinal)
            </td>
            <td>
                @Html.ActionLink("Detalle", "Details", new { id = item.Id })
            </td>
        </tr>
    }

</table>
